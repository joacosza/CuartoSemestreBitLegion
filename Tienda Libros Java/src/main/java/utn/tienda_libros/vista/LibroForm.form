<?xml version="1.0" encoding="UTF-8"?>
<form xmlns="http://www.intellij.com/uidesigner/form/" version="1" bind-to-class="utn.tienda_libros.vista.LibroForm">
  <grid id="mainPanel" binding="panel" layout-manager="BorderLayout">
    <constraints>
      <xy x="20" y="20" width="700" height="450"/>
    </constraints>
    <children>

      <!-- Encabezado -->
      <grid id="header" layout-manager="GridLayoutManager" row-count="1" column-count="2">
        <constraints border-constraint="North"/>
        <children>
          <component id="lblTitulo" class="javax.swing.JLabel">
            <constraints><grid row="0" column="0"/></constraints>
            <properties>
              <text value="Gestor de Libros"/>
              <font size="18" style="1"/>
            </properties>
          </component>
          <component id="lblFecha" class="javax.swing.JLabel" binding="actualizacion">
            <constraints><grid row="0" column="1"/></constraints>
            <properties><text value="ActualizaciÃ³n: --/--/----"/></properties>
          </component>
        </children>
      </grid>

      <!-- Tabla -->
      <component id="scrollLibros" class="javax.swing.JScrollPane">
        <constraints border-constraint="Center"/>
        <children>
          <component id="tblLibros" class="javax.swing.JTable" binding="tablaLibros">
            <properties>
              <selectionMode value="0"/>
            </properties>
          </component>
        </children>
      </component>

      <!-- Panel inferior -->
      <grid id="bottomPanel" layout-manager="GridLayoutManager" row-count="3" column-count="5">
        <constraints border-constraint="South"/>
        <children>
          <component id="txtLibro" class="javax.swing.JTextField" binding="libroTexto">
            <constraints><grid row="0" column="0"/></constraints>
          </component>
          <component id="txtAutor" class="javax.swing.JTextField" binding="autorTexto">
            <constraints><grid row="0" column="1"/></constraints>
          </component>
          <component id="txtPrecio" class="javax.swing.JTextField" binding="precioTexto">
            <constraints><grid row="0" column="2"/></constraints>
          </component>
          <component id="txtStock" class="javax.swing.JTextField" binding="existenciasTexto">
            <constraints><grid row="0" column="3"/></constraints>
          </component>

          <component id="btnAgregar" class="javax.swing.JButton" binding="agregarButton">
            <constraints><grid row="1" column="1"/></constraints>
            <properties><text value="Agregar"/></properties>
          </component>
          <component id="btnEditar" class="javax.swing.JButton" binding="modificarButton">
            <constraints><grid row="1" column="2"/></constraints>
            <properties><text value="Editar"/></properties>
          </component>
          <component id="btnEliminar" class="javax.swing.JButton" binding="eliminarButton">
            <constraints><grid row="1" column="3"/></constraints>
            <properties><text value="Eliminar"/></properties>
          </component>

          <component id="lblTotal" class="javax.swing.JLabel" binding="totalLibros">
            <constraints><grid row="2" column="0"/></constraints>
            <properties><text value="Existencias: 0"/></properties>
          </component>
          <component id="lblValor" class="javax.swing.JLabel" binding="totalEstimado">
            <constraints><grid row="2" column="3"/></constraints>
            <properties><text value="Valor estimado: $0"/></properties>
          </component>
        </children>
      </grid>
    </children>
  </grid>
</form>
